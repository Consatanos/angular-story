{
    "rulesDirectory": [
        "codelyzer"
    ],
    "extends": "tslint:recommended",
    "rules": {
        "quotemark": [
            true,
            "double",
            "avoid-escape"
        ],
        "member-access": true,
        "object-literal-sort-keys": false,
        "variable-name": [
            true,
            "check-format",
            "allow-snake-case",
            "allow-leading-underscore"
        ],
        "pipe-naming": [
            true,
            "kebab-case"
        ],
        "directive-selector": [
            true,
            "attribute",
            "kebab-case"
        ],
        "component-selector": [
            true,
            "element",
            "kebab-case"
        ],
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "max-line-length": [
            true,
            170
        ],
        "max-classes-per-file": [
            false
        ],
        "no-attribute-parameter-decorator": true,
        "no-forward-ref": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "component-class-suffix": [
            true,
            "Component"
        ],
        "directive-class-suffix": [
            true,
            "Directive"
        ],
        "template-use-public": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "ban-types": [
            true,
            [
                "Object",
                "Use {} instead."
            ],
            [
                "any",
                "Specify class for current situation."
            ]
        ],
        "no-output-on-prefix": true,
        "triple-equals": true,
        "prefer-const": true,
        "ordered-imports": false,
        "member-ordering": false,
        "array-type": false,
        "no-angle-bracket-type-assertion": false,
        "rxjs-collapse-imports": true,
        "rxjs-pipeable-operators-only": true,
        "rxjs-no-static-observable-methods": true,
        "rxjs-proper-imports": true,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "align": false,
        "no-trailing-whitespace": [
            true,
            "ignore-blank-lines"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ]
    }
}
